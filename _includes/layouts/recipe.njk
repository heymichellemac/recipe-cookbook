{% include 'partials/_header.html' %}

<div id="recipe" class="paper md:mx-2 md:my-4 p-6 md:p-10 rounded-sm" style="background-color: #f2e5c8;">
    
    <hr style="border: 2px solid black; margin-bottom:.5rem" />
    <h1 class="text-4xl font-medium">{{ title }}</h1>
    <hr style="border: 2px solid black; margin-top:.5rem" />
    <hr style="border: 1px solid black; margin-top:.25rem" />

    <h2 class="text-3xl pt-4 pb-2"> Ingredients </h2>

    <ul class="list-disc pl-5">
        {% for ingredient in ingredients %}
        <li>{{ ingredient | safe }}</li>
        {% endfor %}
    </ul>

    {{ content | safe }}

    <hr style="border: 2px solid black; margin-top:1.5rem" />
    <hr style="border: 1px solid black; margin-top:.25rem" />
    <span class="pt-6 flex justify-center"> Last updated: 
        <script>document.write(new Date(document.lastModified).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }));</script>
    </span>

</div>

