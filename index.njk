<ul>
    {% for recipe in collections.recipes | sort(attribute='data.title') %}
    <li class="text-2xl flex gap-x-6 pb-4 items-center">
        <a class="underline underline-offset-4 decoration-2 decoration-orange-600 hover:text-orange-600" href="{{ recipe.url }}">{{ recipe.data.title }}</a>
        <span class="text-lg pt-2">#{{ recipe.data.category }}</span>
    </li>
    {% endfor %}
</ul>